<?php

namespace Oil\Form;

/**
 * St Form will automatic combination form Elements & Validators & Filters
 * Also allow add sub forms and unit validate
 * 
 * @category   St
 * @package    St_Form
 */
class StationEditForm extends StationCreateForm
{
	protected $mergeElements = array( 
		'id' => array( 
			'name' => 'id', 
			'type' => 'text', 
			'options' => array( 
				'label' => 'Id' 
			), 
			'attributes' => array( 
				'value' => '', 
				'readonly' => 'readonly' 
			) 
		), 

	);
	protected $mergeFilters = array( 
		'id' => array( 
			'required' => true 
		), 

			'no' => array(
					'required' => true,
					'validators' => array(
							'db' => array(
									'name' => 'St\Validator\Db\NoRecordExists',
									'injectdata' => true,
									'options' => array(
											'field' => 'no',
											'table' => 'oil_station',
											'exclude' => array(
													'field' => 'id'
											)
									)
							)
					)
			),
	);
}
