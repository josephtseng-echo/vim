<?php

namespace Oil\DbTable;

use St\Db\TableGateway\TableGateway;
use Zend\Stdlib\Parameters;
use Zend\Db\Sql\Expression;

class Station extends TableGateway
{
    protected $tableName ='station';

    protected $primaryKey = 'id';

    protected $uniqueIndex=array('no');

    public function setParameters(Parameters $params)
    {
        if($params->page){
            $this->enableCount();
            $this->page($params->page);
        }
            if($params->noLimit) {
            $this->disableLimit();
        }

        if($params->noResult) {
            $this->setNoResult(true);
        }

        if($params->id){
            if(is_array($params->id)){
                $this->where(array('id' => array_unique($params->id)));
            } else {
                $this->where(array('id' => $params->id));
            }
        }

 

 

        if($params->keyword){
            $keyword = $params->keyword;
            $this->where(function($where) use ($keyword){
              $like=clone $where;
                $like->like('no', "%$keyword%");
                $like->or;
                $like->like('name', "%$keyword%",\Zend\Db\Sql\Where::OP_OR);
                $where->addPredicate($like);
                return $where;
            });
        }

        if($params->status){
            $this->where(array('status' => $params->status));
        }

 

        if ($params->rows) {
            $this->limit((int) $params->rows);
        }

 

        $orders = array(
            'idasc' => 'id ASC',
            'iddesc' => 'id DESC',
            'timeasc' => 'updateTime ASC',
            'timedesc' => 'updateTime DESC',
            'titleasc' => 'title ASC',
            'titledesc' => 'title DESC',
            'commentasc' => 'commentCount ASC',
            'commentdesc' => 'commentCount DESC',
            'idarray' => 'FIELD(id, %s)',
        );
        if($params->order){
            $order = $orders[$params->order];
            if($order){
                if($params->order == 'idarray') {
                    if($params->id && is_array($params->id)){
                        $idArray = array_unique($params->id);
                        $order = sprintf($order, implode(',', array_fill(0, count($idArray), Expression::PLACEHOLDER)));
                        $this->order(array(new Expression($order, $idArray)));

                    }
                } else {
                    $this->order($order);
                }
            }
        }

        return $this;
    }
}
