#!/usr/bin/perl -w
use utf8;
use Mojo::UserAgent;
use JSON::XS;
use Data::Dumper;
use File::Slurp;
use Encode qw/encode_utf8 decode_utf8/;
my $file = read_file('demo.txt') ;
$file =~ s/[\s?]+//g;
my $ua  = Mojo::UserAgent->new;
my $url = 'http://vm.boyaa.com/texas/api/api.php?XDEBUG_SESSION_START=1';
#my $url = 'http://vm.boyaa.com/texas/api/gateway3.php?XDEBUG_SESSION_START=1';
my $res = $ua->post(
      $url => form => { api => $file}
)->result;
if($res->is_success){
    print Dumper($res->body);

    #print(decode_utf8($res->body));
} 
if($res->is_error){
    print($res->message);
}

